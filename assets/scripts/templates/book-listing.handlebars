<div class="table-responsive">
  <table class="table table-hover">
<thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Grade Level</th>
    <th>Description</th>
    <th>Reviews</th>
  </tr>
</thead>
<tbody>
{{#each books as |book|}}
  <!-- <tr data-id="{{book.id}}">
    <th scope="row">{{book.id}}</th> -->
    <td>{{book.title}}</td>
    <td>{{book.author}}</td>
    <td>{{book.grade_level}}</td>
    <td>{{book.description}}</td>
    <td>{{#each reviews as |review|}}
      {{review.review_content}}
      {{/each}}
    </td>
  </tr>
  {{/each}}
</tbody>

  </table>
</div>


