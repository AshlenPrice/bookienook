{{#each books as |book|}}



   <!-- Developers, why are we using data-id and not just id? -->
   <ul data-id="{{book.id}}">
     <li> Title: {{book.title}}</li>
     {{#if book.description}}
        <li>{{book.description}}</li>
     {{else}}
        <li>No description.</li>
      {{/if}}
      {{#if book.reviews}}
         <li>{{book.reviews}}</li>
      {{else}}
         <li>No reviews.</li>
       {{/if}}
   </ul>

{{/each}}
